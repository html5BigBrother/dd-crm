.p-page
  position absolute
  top 0
  bottom 0
  left 0
  right 0
.p-container
  background url('../../static/imgs/login-bg.jpg') no-repeat center
  background-size cover
  display flex
  flex-direction column
  align-items center
  justify-content center
  height 100%

.p-form-box
  background rgba(255,255,255,0.8)
  width 90%
  height 500px
  border-radius 10px
  display flex
  flex-direction column
  align-items center
  justify-content center

.p-input-wrap
  margin-bottom 50px
  width 80%
  .u-input
    width 100%
    height 70px
    border 1px solid #dcdfe6
    border-radius 8px
    color #606266
    box-sizing border-box
    padding 0 20px
  .u-btn-submit
    width 100%
    height 70px
    line-height 70px

