
page
  font-family "PingFang SC Medium"
  width 100%
  background-color #fff

.flex-1
  flex 1

// view点击态
.view-hover
  background-color rgba(0, 0, 0, 0.1)
  opacity 0.7

//  按钮点击态
.button-hover
  background-color rgba(0, 0, 0, 0.1)
  opacity 0.7

// 列表样式
.list-style-sheet
  .sheet-item
    display flex
    align-items center
    margin 15px
    padding 15px
    border-bottom 1px dashed rgba(0,0,0,0.1)
    color #888
    font-size 28px
    line-height 40px
    &:last-child
      border-bottom 0
  .sheet-item-content
    flex 1
  .sheet-item-title
    font-size 34px
    color #353535
    line-height 48px
    margin-bottom 8px

// form表单样式
.form-style
  padding-bottom 50px
  .form-item
    margin-bottom 20px
    &:last-child
      margin-bottom 0
    .item-name
      color #353535
      font-size 32px
      margin-bottom 14px
    .item-select
      display flex
      align-items center
      height 80px
      border-top 1px solid rgba(0,0,0,0.1)
      border-bottom 1px solid rgba(0,0,0,0.1)
